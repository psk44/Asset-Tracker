<h1>Search</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query, :value => @query%>

  <%= form.label :category_id, "Filter by category:" %>
  <%= form.select :category_id, DeviceCategory.all.map { |c| [c.name, c.id] }, { :selected => @category_id } %>

  <%= form.label :manufacturer_id, "Filter by manufacturer:" %>
  <%= form.select :manufacturer_id, DeviceManufacturer.all.map { |m| [m.name, m.id] }, { :selected => @manufacturer_id } %>

  <%= form.submit "Search" %>
<% end %>

<p class="mt-3">You searched for '<%= @query %>'</p>

<h2>Results</h2>

<% if @devices.present? %>
  <p>Hits: <%= @devices.count %></p>

  <ul>
    <% @devices.each do |d| %>
      <li><%= d.name %></li>
    <% end %>
  </ul>
<% end %>
